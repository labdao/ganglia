{
    "class": "CommandLineTool",
    "name": "colabdesign-interactive",
    "description": "RFdiffusion is a method for structure generation, with or without conditional information (a motif, target etc). It can perform a whole range of protein design challenges.",
    "author": "sokrypton",
    "task": "protein design",
    "baseCommand": [
        "/bin/bash",
        "-c"
    ],
    "arguments": [
        "mv /inputs/protein/*.pdb /inputs/target_protein.pdb;",
        "mv /inputs/config/*.yaml /inputs/config.yaml;",
        "python -u main.py;",
        "echo 'main.py complete!';"
    ],
    "dockerPull": "quay.io/labdao/colabdesign:sha-adfe6d8@sha256:c01d09d5bb8989c3b5bce4777a34dc057fac164a771a482a35f20ce8531cf0af",
    "gpuBool": true,
    "networkBool": true,
    "cpu": 3,
    "memoryGB": 12,
    "inputs": {
        "target_protein": {
            "type": "File",
            "item": "",
            "glob": [
                "*.pdb"
            ],
            "grouping": "target",
            "position": "101"
        },
        "target_chain": {
            "type": "string",
            "default": "D",
            "grouping": "target",
            "position": "102"
        },
        "target_start_residue": {
            "type": "int",
            "default": "1",
            "min": "1",
            "grouping": "target",
            "position": "103"
        },
        "target_end_residue": {
            "type": "int",
            "min": "1",
            "grouping": "target",
            "position": "104"
        },
        "hotspot": {
            "type": "string",
            "default": "",
            "grouping": "target",
            "description": "Target residues that should be in contact with the binder.",
            "example": "A30,A33,A34",
            "position": "105"
        },
        "binder_length": {
            "type": "int",
            "default": "50",
            "min": "1",
            "max": "1000",
            "description": "The length of the protein binder that is being designed",
            "grouping": "binder",
            "position": "201"
        },
        "number_of_binders": {
            "type": "int",
            "default": "2",
            "min": "1",
            "max": "32",
            "description": "The number of protein binders to be designed",
            "grouping": "binder",
            "position": "202"
        },
        "full_prompt": {
            "type": "string",
            "default": "",
            "description": "The complete prompt or 'contig' passed to the diffusion model. This overrides other GUI inputs.",
            "example": "A1-283:B1-6/1/B8-20/22/B43-47"
            "grouping": "_advanced",
            "position": "301"
        },
        "parameters": {
            "type": "File",
            "item": "",
            "glob": [
                "*.yaml"
            ],
            "description": "A complete Hydra parameter config file that gives control over all other parameters not listed in the UI. This *does not* override other GUI inputs",
            "grouping": "_advanced",
            "position": "302"
        }
    },
    "outputs": {
        "compressed_designs": {
            "type": "Array",
            "item": "File",
            "glob": [
                "*.zip"
            ]
        }
    }
}
