{
  "class": "CommandLineTool",
  "name": "colabdesign-dev",
  "description": "one-pot design of protein backbones and sequences",
  "author": "",
  "baseCommand": ["/bin/bash", "-c"],
  "arguments": [
    "mv /inputs/*.pdb /inputs/target_protein.pdb || true;",
    "mv /inputs/*.yaml /inputs/config.yaml || true;",
    "mv /inputs/protein/*.pdb /inputs/target_protein.pdb || true;",
    "mv /inputs/config/*.yaml /inputs/config.yaml || true;",
    "ls /inputs;",
    "test -s /inputs/target_protein.pdb || (echo Target protein missing...Exiting && exit 1);",
    "test -s /inputs/config.yaml || (echo Config file missing...Exiting && exit 1);",
    "echo 'Attempting main.py...';",
    "python -u main.py;",
    "echo 'main.py complete!';"
  ],
  "dockerPull": "quay.io/labdao/colabdesign:sha-adfe6d8@sha256:c01d09d5bb8989c3b5bce4777a34dc057fac164a771a482a35f20ce8531cf0af",
  "gpuBool": true,
  "networkBool": true,
  "cpu": 3,
  "memoryGB": 12,
  "inputs": {
    "protein": {
      "type": "File",
      "item": "",
      "glob": ["*.pdb"]
    },
    "config": {
      "type": "File",
      "item": "",
      "glob": ["*.yaml"]
    }
  },
  "outputs": {
    "best_design": {
      "type": "File",
      "item": "",
      "glob": ["best.pdb"]
    },
    "design_scores": {
      "type": "File",
      "item": "",
      "glob": ["mpnn_results.csv"]
    },
    "design_sequences": {
      "type": "File",
      "item": "",
      "glob": ["design.fasta"]
    },
    "compressed_designs": {
      "type": "Array",
      "item": "File",
      "glob": ["*.zip"]
    }
  }
}
