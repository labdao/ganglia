{
    "class": "CommandLineTool",
    "name": "colabdesign-dev",
    "description": "one-pot design of protein backbones and sequences",
    "author": "",
    "baseCommand": ["/bin/bash", "-c"],
    "arguments": [
        "mkdir -p conf/params && mkdir -p conf/inputs && mkdir -p conf/outputs",
        "wget https://raw.githubusercontent.com/labdao/plex/adding_colabdesign_conditional/tools/colabdesign-conditional/install.py;",
        "wget https://raw.githubusercontent.com/labdao/plex/adding_colabdesign_conditional/tools/colabdesign-conditional/main.py;",
        "wget https://raw.githubusercontent.com/labdao/plex/adding_colabdesign_conditional/tools/colabdesign-conditional/conf/inputs/container.yaml && mv container.yaml conf/inputs;",
        "wget https://raw.githubusercontent.com/labdao/plex/adding_colabdesign_conditional/tools/colabdesign-conditional/conf/outputs/container.yaml && mv container.yaml conf/outputs;",
        "wget https://raw.githubusercontent.com/labdao/plex/adding_colabdesign_conditional/tools/colabdesign-conditional/conf/config.yaml && mv config.yaml conf;",
        "cp $(inputs.config.filepath) conf/params;", 
        "python install.py;",
        "echo 'Install complete!';",
        "python3 main.py params=$(inputs.config.basename) inputs=container outputs=container;",
        "echo 'run complete!';"
      ],
    "dockerPull": "docker.io/niklastr/dev@sha256:01dd6d1eb418d67e97e7517de220e76f9403517502efa411f68c2eeb88977d0f",
    "gpuBool": true,
    "networkBool": true,
    "inputs": {
      "protein": {
        "type": "File",
        "item": "",
        "glob": ["*.pdb"]
      },
      "binder_protein_template": {
        "type": "File",
        "item": "",
        "glob": ["*.pdb"]
      },
      "config": {
        "type": "File",
        "item": "",
        "glob": ["*.yaml"]
      }
    },
    "outputs": {
      "design_scores": {
      "type": "File",
      "item": "",
      "glob": ["mpnn_results.csv"]
    }
    }
  }
