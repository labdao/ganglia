{
    "class": "CommandLineTool",
    "name": "colabfold-standard",
    "description": "Protein folding prediction using Colabfold (standard settings)",
    "baseCommand": ["/bin/bash", "-c"],
    "arguments": [
      "colabfold_batch --templates --num-recycle $(inputs.recycle) --use-gpu-relax --amber /inputs /outputs;"
    ],
    "requirements": [
      {
        "class": "DockerRequirement",
        "dockerPull": "public.ecr.aws/p7l9w5o7/colabfold:latest"
      },
      {
        "class": "ResourceRequirement",
        "gpuBool": true,
        "networkBool": true
      }
    ],
    "inputs": {
      "sequence": {
        "type": "File",
        "glob": "*.fasta"
      },
      "recycle": {
        "type": "int",
        "default": 3
      }
    },
    "outputs": {
      "folded_protein": {
        "type": "File",
        "glob": "*rank_001*.pdb"
      }
    }
  }
  