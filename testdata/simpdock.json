{
    "class": "CommandLineTool",
    "name": "simpdock",
    "description": "A description for the simpdock tool",
    "baseCommand": ["/bin/bash", "-c"],
    "arguments": [
      "python -m inference -l $(inputs.layers) -s $(inputs.steps) && python -m run --protein $(inputs.protein.path) --small_molecule_library $(inputs.small_molecule.path) --scifimode $(inputs.scifimode)"
    ],
    "requirements": [
      {
        "class": "DockerRequirement",
        "dockerPull": "simpdock:v1"
      }
    ],
    "inputs": {
      "protein": {
        "type": "File", 
        "default": {
          "class": "File",
          "address": {
            "ipfs": "ipfs://QmgsdfgsdfgsfdZ",
            "s3": "s3://bucket/file"}  
        }
      },
      "small_molecule": {
        "type": "File",
        "address": {
          "ipfs": "ipfs://QmgsdfgsdfgsfdZ",
          "s3": "s3://bucket/file"}  
        },
      "layers": {
        "type": "int",
        "default": 1
      },
      "steps": {
        "type": "int",
        "default": 1
      },
      "scifimode": {
        "type": "string",
        "default": "N"
      }
    },
    "outputs": {
      "output_example": {
        "type": "File",
        "glob": "output_file_pattern" 
      }
    }
  }
  